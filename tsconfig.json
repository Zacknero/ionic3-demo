{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@app/*": [ "app/*" ],
            "@core/*": [ "app/core/*" ],
            "@shared/*": [ "app/shared/*" ],
            "@assets/*": [ "assets/*" ],
            "@env": [ "environments/environment" ],
            "@theme/*": [ "theme/*" ]
        }

    },
    "include": [
        "src/**/*.ts"
    ],
    "indent": [
        true,
        "spaces",
        4
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/__tests__/*.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
